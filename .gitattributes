# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose.yml text eol=lf
.dockerignore text eol=lf

# Markdown files
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Environment files
.env* text eol=lf

# Git config files
.gitignore text eol=lf
.gitattributes text eol=lf
